<div class="bg-img">
  <h1>Your <strong>List!</h1>
  <p>Here you can find your favourite list.</p>
  <a class="btn btn-flat" href="#">Create a new List</a>
  <div class="container">
    <div class="topnav">
      <a href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
  </div>

<div class="container" style="background-image: url(https://student.openenglish.com/images/gamification/bg-gamification.jpg)">
  <div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js"></h3>
    <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4 mb-3">
        <div class="container">
          <%= list.name %>
        </div> 
      </div>
    <% end %>
  </div>
  </div>
</div>


</div>


